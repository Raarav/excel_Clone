<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="style.css">
        <title><%=title%></title>
    </head>
    <body>
        <div class="menu-container">
            <div class="menu" id="file"">File</div>
            <div class="menu" id="home">Home</div>  
            <!-- <div class="menu" id="format">Format</div>           -->
        </div>
        <div class="menu-options-container">
            <div class="menu-options" id="File-menu-options">
                <div id = "New">New</div>
                <div id = "Open">Open</div>
                <div id = "Save">Save</div>
            </div>
            <div class="menu-options" id="Home-menu-options">
                <div class="menu-group">
                    <div class="menu-row">
                        <select name="" id="font-family">
                            <option value="Arial">Font-1</option>
                            <option value="Cambria">Font-2</option>
                            <option value="Georgia">Font-3</option>
                            <option value="monospace">Font-4</option>
                            <option value="sans-sarif">Font-5</option>
                        </select>
                        <select name="" id="font-size">
                            <option value="10">10</option>
                            <option value="12">12</option>
                            <option value="14">14</option>
                            <option value="16">16</option>
                            <option value="18">18</option>
                            <option value="20">20</option>
                            <option value="22">22</option>
                        </select>
                    </div>
                </div>

                <div class="menu-row">
                    <input type="button" id="bold" value="B">
                    <input type="button" id="underline" value="U">
                    <input type="button" id="italic" value="I">
                    <input type="color" id="big-color" value="rebeccapurple">
                    <input type="color" id="big-color" value="gray">
                </div>
            </div>
            <div class="menu-group">
                <input type="button" value="L" halign="left">
                <input type="button" value="C" halign="center">
                <input type="button" value="R" halign="right">
            </div>
        </div>

        <div class="formula-container">
            formula
            <input type="text" readonly="true" id="address-input">
            <input type="text" id="formula-input">
        </div>     

        <div class="content-container">
        <div id="top-left-cell" class="top-left-cell"></div>
        <div id="top_row" class="top-row">
            <%for(let j=0;j<cols;j++){%>
                <div class="cell">
                    <%= String.fromCharCode(j+65)%> 
                </div>
            <%}%>
        </div>
        <div id="left-col" class="left-col">
            <%for(let j=1;j<=rows;j++){%>
                <div class="cell" contenteditable="true">
                    <%=j%>
                </div>
            <%}%>
        </div>
        
        <div id="grid" class="grid">
            <% for(let i=0;i<rows;i++) {%>
                <div class="row">
                    <% for(let j=0;j<cols;j++){ %>
                        <div class="cell" contenteditable="true" r-id=<%=i%> c-id=<%=j%>>
                        </div>
                    <%}%>
                </div>
            <%}%>
        </div>

        <div class="sheets"></div>
        <script src="script.js"></script>
    
    </body>
</html>